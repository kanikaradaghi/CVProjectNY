@model CVProject.Models.ViewModels.MessageProfileViewModel;

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="container mt-5">
	<h2>Nytt meddelande</h2>

	<form asp-action="SendMessage" method="post" class="mt-4">
		<div class="form-group">
			@if (!User.Identity.IsAuthenticated)
			{
				<label for="Avsandare">Skriv in ditt namn:</label>
				<input type="text" asp-for="Avsandare" class="form-control" required />
				<span asp-validation-for="Avsandare" class="text-danger"></span>
			}
			<br />

			<label for="Innehall">Meddelande:</label>
			<textarea asp-for="Innehall" rows="8" class="form-control" style="width: 50%;"></textarea>
			<span asp-validation-for="Innehall" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Skicka meddelande</button>
	</form>
</div>

<footer>

	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</footer>
